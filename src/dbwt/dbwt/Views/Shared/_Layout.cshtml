            <script src="/assets/js/script.min.js"></script>
            <link rel="stylesheet" href="~/assets/css/Footer-Basic.css">
            <link rel="stylesheet" href="/assets/css/main_custom_style.css">

            @{ 
                if (ViewData["header_addition"] != null)
                {
                    Html.Raw(ViewData["header_addition"]);
                }
            }
        </head>

        <body>


                <header>
                        <div class="container">
                            <div class="row">
                                <div class="col-md-2">
                                    <h2>e-Mensa </h2>
